<!DOCTYPE html>
<html>
  <head>
    <title><%= appName %> : <%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <h1><%= appName %></h1>
    <h2><%= title %></h2>
    <% include header.ejs %>
    <p><%= __('Welcome to page') %> <%= title %>.</p>
    <p><%= __('Here is a list of all our advertisements:')%></p>

    <% advertisements.forEach(advertisement => { %>
    <h3><%= advertisement.name %></h3>
    <% if (advertisement.sale === true) { %>
    <p><%= __('It is for sale by') %> <%= advertisement.price %>€</p>
    <% } else { %>
    <p><%= __('Wanted by') %> <%= advertisement.price %>€</p>
    <% } %>
    <img
      src="<%= advertisement.photo %>"
      alt="<%= __('Advertisement Photo') %>"
      width="250px"
    />
    <% advertisement.tags.forEach (tag => { %>
    <div><strong># <%= tag %> </strong></div>
    <% }) %> <% }) %>
  </body>
</html>
